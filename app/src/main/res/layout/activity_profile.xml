<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/orange"
    tools:context="com.hacksmith.vmcculloch.crave.ProfileActivity">

    <TextView
        android:text="User Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/profileTitle" />

    <TextView
        android:text="Dietary Preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/preferences"
        android:layout_below="@+id/profileTitle"
        android:layout_centerHorizontal="true" />

    <Switch
        android:text="Vegetarian  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preferences"
        android:layout_centerHorizontal="true"
        android:id="@+id/vegetarian" />

    <Switch
        android:text="Vegan  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vegetarian"
        android:layout_centerHorizontal="true"
        android:id="@+id/vegan" />
    <Switch
        android:text="Kosher  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vegan"
        android:layout_centerHorizontal="true"
        android:id="@+id/kosher" />

    <TextView
        android:text="Allergies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/allergies"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/kosher" />

    <Switch
        android:text="No Peanuts  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/allergies"
        android:layout_centerHorizontal="true"


        android:id="@+id/peanuts" />
    <Switch
        android:text="No Glutin  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/peanuts"
        android:layout_centerHorizontal="true"
        android:id="@+id/glutin" />
    <Switch
        android:text="No Soy  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/glutin"
        android:layout_centerHorizontal="true"
        android:id="@+id/soy" />


</RelativeLayout>
